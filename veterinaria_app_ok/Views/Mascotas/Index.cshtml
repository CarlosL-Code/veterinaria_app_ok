@model IEnumerable<veterinaria_app_ok.Models.Mascota>

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["AppName"]</h1>

<p>
    <a asp-action="Create">Crear nueva Mascota</a>
</p>
<div class="mb-3">
    <label for="filtroCategoria" class="form-label fw-semibold">Filtrar por categoría:</label>
    <select id="filtroCategoria" class="form-select select2">
        <option value="">-- Todas --</option>
        @foreach (var cat in ViewBag.Categorias as List<veterinaria_app_ok.Models.Categoria>)
        {
            <option value="@cat.Name">@cat.Name</option>
        }
    </select>
</div>

<table id="tablaMascotas" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Imagen Mascota</th>  <!-- NUEVO encabezado -->
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Propietario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.AvatarPath))
                    {
                        <img src="@item.AvatarPath" alt="avatar" width="50" height="50" class="rounded-circle" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Propietario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Name)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary me-2" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-info me-2" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>


            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#tablaMascotas').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
                }
            });

            $('.select2').select2();

            $('#filtroCategoria').on('change', function () {
                var filtro = $(this).val();
                if (filtro) {
                    table.column(6).search('^' + filtro + '$', true, false).draw();
                } else {
                    table.column(6).search('').draw();
                }
            });
        });
    </script>
}
