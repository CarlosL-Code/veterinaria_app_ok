@model IEnumerable<veterinaria_app_ok.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de categorias</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nueva categoria</a>
    

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCategoria)
            </td>
            <td>
               
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>

                        
                        
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
